// Base class for Cylinder calculations
class Cylinder {
    protected double radius;
    protected double height;

    // Constructor to initialize the radius and height
    public Cylinder(double radius, double height) {
        this.radius = radius;
        this.height = height;
    }

    // Method to compute the surface area of the cylinder
    public double computeSurfaceArea() {
        return 2 * Math.PI * radius * radius + 2 * Math.PI * radius * height;
    }

    // Method to compute the volume of the cylinder
    public double computeVolume() {
        return Math.PI * radius * radius * height;
    }
}

// Derived class to display the results
class CylinderDisplay extends Cylinder {

    // Constructor to initialize the base class properties
    public CylinderDisplay(double radius, double height) {
        super(radius, height);
    }

    // Method to display the area and volume of the cylinder
    public void displayResults() {
        double area = computeSurfaceArea();
        double volume = computeVolume();
        System.out.printf("Surface Area: %.2f\n", area);
        System.out.printf("Volume: %.2f\n", volume);
    }
}

// Main class to run the program
public class Main {
    public static void main(String[] args) {
        // Example values for radius and height
        double radius = 5.0;
        double height = 10.0;

        // Create an instance of CylinderDisplay
        CylinderDisplay cylinder = new CylinderDisplay(radius, height);
        
        // Display the results
        cylinder.displayResults();
    }
}

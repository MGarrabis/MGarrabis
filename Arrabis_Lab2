import java.util.Scanner;

class Cylinder {
    protected double radius;
    protected double height;

    // Constructor to set the radius and height
    public Cylinder(double r, double h) {
        radius = r;
        height = h;
    }
            
    // Method to compute the surface area
    public double area() {
        return 2 * Math.PI * radius * (radius + height);
    }
}

class CylinderVolume extends Cylinder {
    // Constructor to initialize radius and height
    public CylinderVolume(double r, double h) {
        super(r, h);
    }

    // Method to compute the volume
    public double volume() {
        return Math.PI * Math.pow(radius, 2) * height;
    }
}

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // Get user input for radius and height
        System.out.print("Enter radius of the cylinder: ");
        double radius = scanner.nextDouble();
        System.out.print("Enter height of the cylinder: ");
        double height = scanner.nextDouble();

        // Create an instance of CylinderVolume
        CylinderVolume cylinderVolume = new CylinderVolume(radius, height);

        // Compute and display the area and volume
        double area = cylinderVolume.area();
        double volume = cylinderVolume.volume();

        System.out.printf("Surface Area of the Cylinder: %.2f%n", area);
        System.out.printf("Volume of the Cylinder: %.2f%n", volume);

        scanner.close();
    }
}
